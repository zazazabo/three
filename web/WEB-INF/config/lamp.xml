<?xml version="1.0" encoding="utf-8"?>
<xforms>
    <xform desc="灯具" id="lampform">
        <xhandle desc="查询灯具表" id="getlampList" rtnype="JSON">
            <xsql id="a1" list="true" page="true" tpe="SQL" tpl="SELECT tl.id as uid, * FROM  t_lamp tl WHERE    @CONDITION  " var="bootstrap">
                <xflt id="CONDITION" nrp="" tpl="@l_comaddr AND @l_factorycode AND @l_groupe AND @l_deplayment AND @pid">
                    <xfltpara id="l_comaddr" nrp="1=1" para="l_comaddr" sql="l_comaddr = ':l_comaddr'">
                    </xfltpara>
                    <xfltpara id="l_factorycode" nrp="1=1" para="l_factorycode" sql="l_factorycode = :l_factorycode">
                    </xfltpara>
                    <xfltpara id="l_groupe" nrp="1=1" para="l_groupe" sql="l_groupe = :l_groupe">
                    </xfltpara>
                    <xfltpara id="l_deplayment" nrp="1=1" para="l_deplayment" sql="l_deplayment = :l_deplayment">
                    </xfltpara>
                    <xfltpara id="pid" nrp="1=2" para="pid" sql="l_comaddr IN (SELECT comaddr AS l_comaddr FROM t_baseinfo   WHERE  pid = ':pid')">
                    </xfltpara>
                </xflt>
            </xsql>
        </xhandle>
        <xhandle desc="灯具的网关" id="getComaddr" rtnype="JSON">
            <xsql id="a1" list="true" page="true" tpe="SQL" tpl="SELECT   tl.l_comaddr as id,tl.l_comaddr as text FROM t_lamp tl where @CONDITION 
             " var="list">
                <xflt id="CONDITION" nrp="" tpl="@l_comaddr AND @l_deplayment AND @pid ">
                    <xfltpara id="l_comaddr" nrp="1=1" para="l_comaddr" sql="l_comaddr = ':l_comaddr' ">
                    </xfltpara>
                    <xfltpara id="l_deplayment" nrp="1=1" para="l_deplayment" sql="l_deplayment = :l_deplayment ">
                    </xfltpara>
                    <xfltpara id="pid" nrp="1=2" para="pid" sql="l_comaddr IN (SELECT comaddr AS l_comaddr FROM t_baseinfo   WHERE  pid = ':pid')">
                    </xfltpara>
                </xflt>
            </xsql>
        </xhandle>
    </xform>
    <xform desc="灯具方案" id="planForm">
        <xhandle desc="添加灯具方案" id="addlamp" rtn="rs" rtnype="JSON">
            <xsql id="a1" para="pid,p_name,p_type,p_time1,p_time2,p_time3,p_time4,p_time5,p_time6" tpe="DDL" tpl="insert into t_plan(p_attr,pid,p_type,p_name,p_time1,p_time2,p_time3,p_time4,p_time5,p_time6) values(1,':pid',:p_type,':p_name',':p_time1',':p_time2',':p_time3',':p_time4',':p_time5',':p_time6') " var="rs">
            </xsql>
        </xhandle>
        <xhandle desc="灯具部署方案列表" id="getLampPlan" rtnype="JSON">
            <xsql id="a1" list="true" page="true" tpe="SQL" tpl="SELECT * FROM t_plan tp where  @CONDITION  " var="bootstrap">
                <xflt id="CONDITION" nrp="" tpl="@p_attr AND @p_type AND @p_code AND @pid">
                    <xfltpara id="p_attr" nrp="1=1" para="p_attr" sql="p_attr = :p_attr">
                    </xfltpara>
                    <xfltpara id="p_type" nrp="1=1" para="p_type" sql="p_type = :p_type">
                    </xfltpara>
                    <xfltpara id="p_code" nrp="1=1" para="p_code" sql="p_code = :p_code">
                    </xfltpara>
                    <xfltpara id="pid" nrp="1=2" para="pid" sql="pid = ':pid'">
                    </xfltpara>
                </xflt>
            </xsql>
        </xhandle>
        <xhandle desc="添加灯具方案场景" id="addscene" rtn="rs" rtnype="JSON">
            <xsql id="a1" para="p_name,pid,p_type,p_scene1,p_scene2,p_scene3,p_scene4,p_scene5,p_scene6,p_scene7,p_scene8" tpe="DDL" tpl="insert into t_plan(p_attr,pid,p_type,p_name,p_scene1,p_scene2,p_scene3,p_scene4,p_scene5,p_scene6,p_scene7,p_scene8) values(1,':pid',:p_type,':p_name',':p_scene1',':p_scene2',':p_scene3',':p_scene4',':p_scene5',':p_scene6',':p_scene7',':p_scene8') " var="rs">
            </xsql>
        </xhandle>
    </xform>
</xforms>
